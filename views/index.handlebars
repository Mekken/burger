<div class="container">
  
  <div class="row justify-content-center">
    <h1>Eat-Dat-Burger!</h1>
  </div>

  <div class="row">
    <div class="col">
      <h5>Burgers Waiting to be Eaten!</h5>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{this.burger_name}}
              <button class="change-devour" data-id="{{this.id}}" data-devoured="1">
                Devour it!
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h5>Burgers that have been Devoured!</h5>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>{{this.id}}. {{this.burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col text-center">
      <h5>Add a Burger</h5>
      <form class="create-form">
        <div class="form-group">
          <label for="burgerName">Burger Name:</label> <br>
          <input type="text" id="burgerName" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>